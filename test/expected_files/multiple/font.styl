iconFontFamily($char) {
  font-family: $char[0];
}

iconFont() {
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
}

iconContent($char) {
  content: $char[1];
}

icon($char) {
  iconFontFamily($char)
  iconFont()

  &:before {
    iconContent($char)
  }
}

@font-face {
  font-family: "fontsmith-multiple";
  src:url("font.eot");
  src:url("font.eot?#iefix") format("embedded-opentype"),
    url("font.woff") format("woff"),
    url("font.ttf") format("truetype"),
    url("font.svg#icomoon") format("svg");
  font-weight: normal;
  font-style: normal;
}
